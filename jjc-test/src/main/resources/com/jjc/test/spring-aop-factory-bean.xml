<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="logTestAdvice" class="com.jjc.test.aop.LogTestAdvice"/>
    <bean id="userService" class="org.springframework.aop.framework.ProxyFactoryBean">
        <!-- 代理所要实现的接口 -->
        <property name="proxyInterfaces" value="com.jjc.test.service.UserService"/>
        <!-- 需要织入目标对象的Bean列表 -->
        <property name="interceptorNames" value="logTestAdvice"/>
        <!-- 代理目标对象 -->
        <property name="target">
            <bean class="com.jjc.test.service.impl.UserServiceImpl"/>
        </property>
    </bean>

</beans>